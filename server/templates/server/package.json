{
  "name": "frourio-app-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "<% if (orm === 'prisma') { %>npm run migrate:dev && <% } %>run-p dev:*",
    "dev:server": "webpack --watch --mode=development",
    "dev:frourio": "frourio<% if (server === 'express') { %>-express<% } %> --watch<% if (orm === 'prisma') { %>",
    "dev:prisma": "prisma generate --watch<% } else if (orm === 'typeorm') { %>",
    "dev:typeormer": "typeormer --watch<% } %>",
    "build": "npm run build:frourio && webpack --mode=production",
    "build:frourio": "<% if (orm === 'prisma') { %>npm run migrate:dev && prisma generate && <% } else if (orm === 'typeorm') { %>typeormer && <% } %>frourio<% if (server === 'express') { %>-express<% } %><% if (orm === 'prisma') { %>",
    "migrate:dev": "prisma migrate dev --preview-feature",
    "migrate:reset": "prisma migrate reset --preview-feature<% } else if (orm === 'typeorm') { %>",
    "migration:generate": "ts-node ./node_modules/.bin/typeorm migration:generate -n Task",
    "migration:run": "ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:revert": "ts-node ./node_modules/.bin/typeorm migration:revert<% } %><% if (daemon === 'pm2') { %>",
    "pm2:start": "pm2 start pm2.config.json --env production",
    "pm2:stop": "pm2 stop pm2.config.json",
    "pm2:delete": "pm2 delete pm2.config.json",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit<% } %>",
    "start": "cross-env NODE_ENV=production node index.js"
  },
  "dependencies": {
    "<% if (orm === 'prisma') { %>@prisma/client": "^2.14.0",
    "<% } %>class-validator": "^0.12.2<% if (server === 'express') { %>",
    "cors": "^2.8.5<% } %>",
    "dotenv": "^8.2.0<% if (server === 'express') { %>",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "helmet": "^4.3.1",
    "multer": "^1.4.2<%- dbModule %><% } else { %>",
    "fastify": "^3.9.2",
    "fastify-cors": "^5.1.0",
    "fastify-helmet": "^5.1.0",
    "fastify-jwt": "^2.2.0",
    "fastify-multipart": "^3.3.1<%- dbModule %>",
    "fastify-static": "^3.3.1<% } %><% if (daemon === 'pm2') { %>",
    "pm2": "^4.5.1<% } %><% if (orm === 'typeorm') { %>",
    "typeorm": "^0.2.29",
    "typeormer": "^0.1.1<% } %>"
  },
  "devDependencies": {
    "<% if (orm === 'prisma') { %>@prisma/cli": "^2.14.0",
    "<% } %><% if (server === 'fastify') { %>@types/busboy": "^0.2.3<% if (testing === 'jest') { %>",
    "@types/jest": "^26.0.20<% } %>",
    "<% } else { %>@types/cors": "2.8.9",
    "@types/express-jwt": "6.0.0<% if (testing === 'jest') { %>",
    "@types/jest": "^26.0.20<% } %>",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/multer": "^1.4.5",
    "<% } %>cross-env": "^7.0.3",
    "frourio<% if (server === 'express') { %>-express<% } %>": "^0.22.1",
    "nodemon-webpack-plugin": "^4.3.2",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-node-externals": "^2.5.2"
  }
}

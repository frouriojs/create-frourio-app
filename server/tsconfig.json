{
  "compilerOptions": {
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ES2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "$/*": ["./*"]
    },
    "rootDir": ".",
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6"
  },
  "exclude": ["node_modules", "templates"]
}
